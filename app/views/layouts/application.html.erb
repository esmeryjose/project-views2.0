<!DOCTYPE html>
<html>
  <head>
    <title>Views</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <ul>
      <% if current_user %>
        <li><%= link_to "Home", user_pictures_path(current_user) %></li>
      <% else %>
        <li><%= link_to "Home"%></li>
      <% end %>
      <li><%link_to "profile page", user_path(current_user) if current_user %></li>
      <li><a href="#contact">Friend Requests</a></li>
      <% if current_user %>
      <li><%= link_to "Log Out", destroy_user_session_path, method: :delete%></li>
      <% else %>
      <li><%= link_to "Sign In", user_session_path %></li>
      <% end %>
      <!-- look into where like ActiveRecord -->
      <li>
        <%= form_tag new_search_path, :method => 'get' do %>
          <p> <%= text_field_tag :type, params[:type] %>
            <select>
              <option value="Location">Location</option>
              <option value="User">User</option>
              <option value="Tag">Tag</option>
            </select>
          <%= submit_tag "Search"%></p>
        <% end %>
      </li>
    </ul>
    <%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
    <%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
    <%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>


    <%= yield %>
  </body>
</html>
